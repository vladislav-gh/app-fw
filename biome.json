{
	"$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true,
		"includes": ["**", "!node_modules", "!.next", "!dist", "!build"]
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 120
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noUnknownAtRules": "off"
			},
			"style": {
				"useImportType": {
					"level": "warn",
					"fix": "safe"
				}
			},
			"correctness": {
				"useExhaustiveDependencies": "off"
			}
		},
		"domains": {
			"next": "recommended",
			"react": "recommended"
		}
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [
							{ "type": true },
							":BLANK_LINE:",
							[":BUN:", ":NODE:"],
							":BLANK_LINE:",
							["react*", "react*/**", "next*", "next*/**"],
							[":PACKAGE:", ":PACKAGE_WITH_PROTOCOL:"],
							":BLANK_LINE:",
							":URL:",
							":BLANK_LINE:",
							"@Shared/**",
							"@Entities/**",
							"@Features/**",
							"@Widgets/**",
							"@Pages/**",
							"@App/**",
							":BLANK_LINE:",
							":ALIAS:",
							":BLANK_LINE:",
							":PATH:"
						]
					}
				}
			}
		}
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "asNeeded"
		}
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		},
		"formatter": {
			"enabled": true
		}
	},
	"json": {
		"parser": {
			"allowTrailingCommas": true
		}
	}
}
